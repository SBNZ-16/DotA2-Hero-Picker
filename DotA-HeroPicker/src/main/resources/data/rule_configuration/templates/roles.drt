template header

role
penalty_base
penalty_multiplier

template "Role rules"


rule "@{role} role"
	agenda-group "team-composition"
	salience -1
	when
		exists(AllyHeroPickedFact())
		roleOverflow("@{role}", $count;)
	then
		double penalty = (@{penalty_base} - (double)$count) * @{penalty_multiplier};
		insert(new UpdateScoresFact(penalty + 1, 0, null, "@{role}", null));
end

end template
